# Copy this file to .env and fill in your values.
TELEGRAM_BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN_HERE
# Comma-separated tokens to track. Supported: BTC,ETH,SOL,BNB
TOKENS=BTC,ETH,SOL,BNB
# Default alert threshold in percent (e.g., 0.5 means 0.5%)
THRESHOLD_PCT=0.5
# Default update interval in seconds
INTERVAL_SEC=60
# Exchanges to use (comma-separated keys from price_sources.EXCHANGES)
EXCHANGES=binance,coinbase,kraken,kucoin,bybit,okx,bitstamp
